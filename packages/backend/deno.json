{
  "name": "@wrm/backend",
  "version": "0.0.1",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-all --unstable-detect-cjs --env-file=../../.env --watch src/main.ts",
    "start": "deno run --allow-all --unstable-detect-cjs --env-file=../../.env src/main.ts",
    "build": "deno compile --allow-all --unstable-detect-cjs --output dist/main src/main.ts",
    "test": "deno test --allow-all --unstable-detect-cjs",
    "test:watch": "deno test --allow-all --unstable-detect-cjs --watch",
    "test:coverage": "deno test --allow-all --unstable-detect-cjs --coverage",
    "lint": "deno lint src/",
    "lint:fix": "deno lint --fix src/",
    "type-check": "deno check src/**/*.ts",
    "clean": "rm -rf dist",
    "prisma:generate": "deno run -A npm:prisma@^6.13.0 generate",
    "prisma:migrate": "deno run -A npm:prisma@^6.13.0 migrate dev",
    "prisma:migrate:deploy": "deno run -A npm:prisma@^6.13.0 migrate deploy",
    "prisma:studio": "deno run -A npm:prisma@^6.13.0 studio",
    "prisma:reset": "deno run -A npm:prisma@^6.13.0 migrate reset",
    "prisma:seed": "deno run --allow-all ./scripts/seed-database.ts"
  },
  "imports": {
    "@fastify/static": "npm:@fastify/static@^8.2.0",
    "@nestjs/common": "npm:@nestjs/common@^11.1.3",
    "@nestjs/core": "npm:@nestjs/core@^11.1.3",
    "@nestjs/config": "npm:@nestjs/config@^4.0.2",
    "@nestjs/jwt": "npm:@nestjs/jwt@^11.0.0",
    "@nestjs/passport": "npm:@nestjs/passport@^11.0.5",
    "@nestjs/platform-express": "npm:@nestjs/platform-express@^11.1.3",
    "@nestjs/platform-fastify": "npm:@nestjs/platform-fastify@^11.1.5",
    "@nestjs/swagger": "npm:@nestjs/swagger@^11.2.0",
    "@nestjs/testing": "npm:@nestjs/testing@^11.1.3",
    "@prisma/client": "npm:@prisma/client@^6.13.0",
    "fastify": "npm:fastify@^5.4.0",
    "prisma": "npm:prisma@^6.13.0",
    "pg": "npm:pg@^8.13.1",
    "@types/pg": "npm:@types/pg@^8.11.10",
    "bcryptjs": "npm:bcryptjs@^2.4.3",
    "@types/bcryptjs": "npm:@types/bcryptjs@^2.4.6",
    "@types/passport-jwt": "npm:@types/passport-jwt@^4.0.1",
    "@wrm/types": "../types/src/index.ts",
    "class-transformer": "npm:class-transformer@^0.5.1",
    "class-validator": "npm:class-validator@^0.14.2",
    "passport": "npm:passport@^0.7.0",
    "passport-jwt": "npm:passport-jwt@^4.0.1",
    "reflect-metadata": "npm:reflect-metadata@^0.1.13",
    "js-yaml": "npm:js-yaml@^4.1.0",
    "@types/js-yaml": "npm:@types/js-yaml@^4.0.9"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "es2022", "dom"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
