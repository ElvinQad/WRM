{
  "name": "@wrm/frontend", 
  "version": "0.0.1",
  "exports": "./src/app/page.tsx",
  "tasks": {
    "dev": "node_modules/.bin/next dev",
    "build": "node_modules/.bin/next build",
    "start": "node_modules/.bin/next start",
    "lint": "node_modules/.bin/next lint",
    "lint:fix": "node_modules/.bin/next lint --fix",
    "type-check": "npx tsc --noEmit",
    "clean": "rm -rf .next dist",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "imports": {
    "react": "npm:react@19.1.0",
    "react-dom": "npm:react-dom@19.1.0",
    "next": "npm:next@~15.3.5",
    "@radix-ui/react-popover": "npm:@radix-ui/react-popover@^1.1.14",
    "@radix-ui/react-scroll-area": "npm:@radix-ui/react-scroll-area@^1.2.9",
    "@radix-ui/react-separator": "npm:@radix-ui/react-separator@^1.1.7",
    "@radix-ui/react-slider": "npm:@radix-ui/react-slider@^1.3.5",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.2.3",
    "@reduxjs/toolkit": "npm:@reduxjs/toolkit@^2.8.2",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.11",
    "@wrm/types": "../types/src/index.ts",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "lucide-react": "npm:lucide-react@^0.525.0",
    "postcss": "npm:postcss@^8.5.6",
    "react-draggable": "npm:react-draggable@^4.5.0",
    "react-redux": "npm:react-redux@^9.2.0",
    "react-resizable": "npm:react-resizable@^3.0.5",
    "suncalc": "npm:suncalc@^1.9.0",
    "tailwind-merge": "npm:tailwind-merge@^3.3.1",
    "tailwindcss": "npm:tailwindcss@^4.1.11",
    "typescript": "npm:typescript@^5.8.0",
    "zustand": "npm:zustand@^5.0.6"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "es2022"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
