{
  "name": "@wrm/frontend", 
  "version": "0.0.1",
  "exports": "./src/app/page.tsx",
  "tasks": {
    "dev": "deno run -A npm:next@^15.1.6 dev",
    "build": "deno run -A npm:next@^15.1.6 build",
    "start": "deno run -A npm:next@^15.1.6 start",
    "lint": "deno run -A npm:next@^15.1.6 lint",
    "lint:fix": "deno run -A npm:next@^15.1.6 lint --fix",
    "type-check": "deno check **/*.ts **/*.tsx",
    "clean": "rm -rf .next dist",
    "test": "deno test --allow-all",
    "test:ui": "deno test --allow-all --reporter=pretty",
    "test:run": "deno test --allow-all",
    "test:timeline": "deno test src/components/timeline/ --allow-all --reporter=pretty",
    "test:timeline:drag": "cd ../testing && deno test frontend/timeline-drag-drop.test.ts --allow-all --reporter=pretty"
  },
  "imports": {
    "happy-dom": "npm:happy-dom@^18.0.1",
    "react": "npm:react@19.1.0",
    "react-dom": "npm:react-dom@19.1.0",
    "react/jsx-runtime": "npm:react@19.1.0/jsx-runtime",
    "@types/react": "npm:@types/react@^18.3.17",
    "@types/react-dom": "npm:@types/react-dom@^18.3.5",
    "next": "npm:next@^15.1.6",
    "@radix-ui/react-popover": "npm:@radix-ui/react-popover@^1.1.14",
    "@radix-ui/react-scroll-area": "npm:@radix-ui/react-scroll-area@^1.2.9",
    "@radix-ui/react-separator": "npm:@radix-ui/react-separator@^1.1.7",
    "@radix-ui/react-slider": "npm:@radix-ui/react-slider@^1.3.5",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.2.3",
    "@reduxjs/toolkit": "npm:@reduxjs/toolkit@^2.8.2",
    "redux-persist": "npm:redux-persist@^6.0.0",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.11",
    "autoprefixer": "npm:autoprefixer@^10.4.20",
    "@wrm/types": "../types/src/index.ts",
    "@/": "./src/",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "lucide-react": "npm:lucide-react@^0.525.0",
    "postcss": "npm:postcss@^8.5.6",
    "react-draggable": "npm:react-draggable@^4.5.0",
    "react-redux": "npm:react-redux@^9.2.0",
    "react-resizable": "npm:react-resizable@^3.0.5",
    "suncalc": "npm:suncalc@^1.9.0",
    "tailwind-merge": "npm:tailwind-merge@^3.3.1",
    "tailwindcss": "npm:tailwindcss@^4.1.11",
    "typescript": "npm:typescript@^5.8.0",
    "vitest": "npm:vitest@^3.2.4",
    "@testing-library/react": "npm:@testing-library/react@^16.3.0",
    "@testing-library/jest-dom": "npm:@testing-library/jest-dom@^6.6.3",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.7.0",
    "jsdom": "npm:jsdom@^26.0.0"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "es2022"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
