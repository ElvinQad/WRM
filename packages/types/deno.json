{
  "name": "@wrm/types",
  "version": "0.0.1",
  "exports": {
    ".": "./src/index.ts",
    "./timeline": "./src/lib/timeline.types.ts",
    "./types": "./src/lib/types.ts"
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-env --allow-run scripts/build.ts",
    "dev": "deno run --allow-read --allow-write --allow-env --allow-run --watch scripts/build.ts",
    "clean": "deno run --allow-read --allow-write scripts/clean.ts",
    "type-check": "deno check src/**/*.ts",
    "validate": "deno run --allow-read scripts/validate-types.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["es2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
